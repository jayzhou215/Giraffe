<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/app_button_warning_bg_disabled" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/app_radius" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="@dimen/app_8dp"
                android:top="@dimen/app_8dp"
                android:right="@dimen/app_8dp"
                android:bottom="@dimen/app_8dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/app_button_warning_bg_pressed" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/app_radius" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="@dimen/app_8dp"
                android:top="@dimen/app_8dp"
                android:right="@dimen/app_8dp"
                android:bottom="@dimen/app_8dp"
                />
        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/app_button_warning_bg" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/app_radius" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="@dimen/app_8dp"
                android:top="@dimen/app_8dp"
                android:right="@dimen/app_8dp"
                android:bottom="@dimen/app_8dp"
                />
        </shape>
    </item>
</selector> 